
<StatsTab>:
    text:   "Statistics"
    GridLayout:
        cols: 2
        row_default_height: 30
        row_force_default: True
        padding: 25
        Label:
            id: str
            font_size: "20sp"
            text: root.c.name
            size_hint_x: None
        Label:
            id: int
            text: "Int "
            size_hint_x: None
        Label:
            id: dex
            text: "Dex"
            size_hint_x: None
        Label:
            id: wis
            text: "Wis"
            size_hint_x: None
        Label:
            id: con
            text: "Con"
            size_hint_x: None
        Label:
            id: cha
            text: "Cha"
            size_hint_x: None
        Button:
            text: 'Str Boost'
            on_press: root.test_button_press()


<AttacksTab>:
    text:   "Attacks/Buffs"
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint: 1, .66
            #size: 500, 1320
            pos_hint: {'center_x': .5, 'center_y': .5}
            do_scroll_x: False
            GridLayout:
                cols: 1
                size_hint: None, None
                width: 500
                #minimum_height: self.height
                spacing: 10
                id: buffs
                Label:
                    text: "Buffs"
        ScrollView:
            size_hint: 1, .33
            #size: 500, 1320
            pos_hint: {'center_x': .5, 'center_y': .5}
            do_scroll_x: False
            GridLayout:
                cols: 1
                size_hint: None, None
                width: 500
                spacing: 5
                id: attacks
                Label:
                    text: "Attacks"

